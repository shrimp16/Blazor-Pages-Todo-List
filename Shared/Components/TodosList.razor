@namespace TodosList

@inject TodoStorage TodoStorage

<ul>
    @foreach (string str in Todos)
    {
        <Blazor_Pages_Todo_List.Shared.Components.TodoItem Data=@str CardColor="blue" />
    }
</ul>

<style>
    ul {
        width: 45%;
        margin: auto;
    }
</style>

@code {
    [Parameter]
    public List<string> Todos { get; set; } = null!;
}
